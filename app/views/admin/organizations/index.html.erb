<h2>Organizations</h2>
<form class="row g-2 mb-2" method="get">
  <div class="col-auto"><input type="text" name="q" value="<%= params[:q] %>" class="form-control" placeholder="Search name"></div>
  <div class="col-auto"><button class="btn btn-primary">Filter</button></div>
</form>

<table class="table table-striped table-sm">
  <thead><tr><th>ID</th><th>Slug</th><th>Name</th><th>Users</th></tr></thead>
  <tbody>
    <% @orgs.each do |o| %>
      <tr>
        <td><a href="/admin/organizations/<%= o.id %>"><%= o.id %></a></td>
        <td><%= o.slug %></td>
        <td><%= o.name %></td>
        <td><%= o.users.count %></td>
      </tr>
    <% end %>
    <% if @orgs.empty? %><tr><td colspan="4" class="text-muted">No organizations</td></tr><% end %>
  </tbody>
</table>
