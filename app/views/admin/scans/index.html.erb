<h2>Scans</h2>
<form class="row g-2 mb-2" method="get">
  <div class="col-auto"><input class="form-control" name="project_slug" value="<%= params[:project_slug] %>" placeholder="project_slug"></div>
  <div class="col-auto">
    <select class="form-select" name="status">
      <option value="">(status)</option>
      <% %w[running completed failed].each do |s| %>
        <option value="<%= s %>" <%= 'selected' if params[:status] == s %>><%= s %></option>
      <% end %>
    </select>
  </div>
  <div class="col-auto"><input class="form-control" name="idempotency_key" value="<%= params[:idempotency_key] %>" placeholder="idempotency_key"></div>
  <div class="col-auto"><button class="btn btn-primary">Filter</button></div>
</form>

<table class="table table-striped table-sm">
  <thead>
    <tr><th>ID</th><th>Org</th><th>User</th><th>Project</th><th>Status</th><th>Started</th></tr>
  </thead>
  <tbody>
    <% @scans.each do |s| %>
      <tr>
        <td><a href="/admin/scans/<%= s.id %>"><%= s.id %></a></td>
        <td><%= s.org %></td>
        <td><%= s.user_ref %></td>
        <td><%= s.project_slug %></td>
        <td><%= s.status %></td>
        <td class="nowrap"><%= s.started_at %></td>
      </tr>
    <% end %>
    <% if @scans.empty? %><tr><td colspan="6" class="text-muted">No scans</td></tr><% end %>
  </tbody>
</table>
