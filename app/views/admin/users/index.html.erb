<h2>Users</h2>
<form class="row g-2 mb-2" method="get">
  <div class="col-auto"><input type="text" name="q" value="<%= params[:q] %>" class="form-control" placeholder="Search email"></div>
  <div class="col-auto"><button class="btn btn-primary">Filter</button></div>
</form>

<table class="table table-striped table-sm">
  <thead><tr><th>ID</th><th>Email</th><th>Org</th><th>Role</th></tr></thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><a href="/admin/users/<%= u.id %>"><%= u.id %></a></td>
        <td><%= u.email %></td>
        <td><%= u.organization&.slug %></td>
        <td><%= u.role %></td>
      </tr>
    <% end %>
    <% if @users.empty? %><tr><td colspan="4" class="text-muted">No users</td></tr><% end %>
  </tbody>
</table>
